{
  "name": "logoly",
  "version": "1.0.0",
  "description": "PornHub Style Logo Generator",
  "private": true,
  "type": "module",
  "bugs": {
    "url": "https://github.com/bestony/logoly/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bestony/logoly.git"
  },
  "license": "WTFPL",
  "author": "Bestony",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "biome check --write .",
    "prepare": "husky",
    "format": "biome format --write ."
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,vue}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
  },
  "dependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.0",
    "unocss": "^66.5.7",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  }
}
